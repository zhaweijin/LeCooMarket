<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget28"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@color/grobal_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:background="@drawable/list_selector" >

        <LinearLayout
            android:id="@+id/ima"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/lc_b"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_margin="1.5dip" >
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/ima"
            android:maxLines="1"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="as"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_l" >
        </TextView>

        <TextView
              android:id="@+id/size"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="大小"
              android:layout_marginTop="8dip"
              android:layout_toLeftOf="@+id/installcheckbox"
              android:layout_alignParentTop="true"
              android:textColor="@color/text_gray"
              android:textSize="@dimen/font_size_s" >
        </TextView>
        
        <LinearLayout
            android:id="@+id/widget38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/ima"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/widget32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:orientation="vertical" >

                

                <TextView
                    android:id="@+id/introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="5dip"
                    android:text="介绍"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_s" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/installcheckbox"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="2dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:checked="false"
            style="@style/install_checkbox"            
            android:focusable="false" >
        </CheckBox>

        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="35dip"
            android:text=""
            android:layout_marginRight="5dip"
            android:textColor="@color/black"
            android:visibility="gone" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>