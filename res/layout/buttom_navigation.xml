<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_navigation"
android:layout_width="fill_parent"
android:layout_height="62dip"
android:background="@drawable/list_header_bar_bg_weight"
android:layout_alignParentLeft="true"
android:layout_alignParentBottom="true"
android:orientation="horizontal"
>
<LinearLayout
android:id="@+id/uijian"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/linear_tuijian"
android:layout_height="62dip"
android:layout_width="62dip"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<TextView
android:id="@+id/tuijian_name"
android:layout_height="fill_parent"
android:layout_width="48dip"
android:paddingTop="3dip"
android:paddingBottom="3dip"
android:gravity="center"
android:focusable="false"
android:drawableTop="@drawable/ic_recommend"
android:background="@android:color/transparent"
android:textColor="@drawable/my_tab_text_selector"
android:layout_gravity="center_horizontal"
android:textSize="@dimen/font_size_buttom_bar"
android:text="首页"
>
</TextView>
</LinearLayout>
</LinearLayout>
<LinearLayout
android:id="@+id/bang"
android:layout_weight="1"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/linear_paihangbang"
android:layout_height="62dip"
android:layout_width="62dip"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>

<TextView
android:id="@+id/paihangbang_name"
android:layout_height="fill_parent"
android:layout_width="48dip"
android:paddingTop="3dip"
android:paddingBottom="3dip"
android:gravity="center"
android:drawableTop="@drawable/ic_rating"
android:textColor="@drawable/my_tab_text_selector"
android:layout_gravity="center_horizontal"
android:textSize="@dimen/font_size_buttom_bar"
android:focusable="false"
android:text="排行"
>
</TextView>
</LinearLayout>
</LinearLayout>
<LinearLayout
android:id="@+id/ory"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/linear_category"
android:layout_height="62dip"
android:layout_width="62dip"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<TextView
android:id="@+id/category_name"
android:layout_height="fill_parent"
android:layout_width="48dip"
android:paddingTop="3dip"
android:paddingBottom="3dip"
android:gravity="center"
android:layout_gravity="center_horizontal"
android:drawableTop="@drawable/ic_category"
android:textColor="@drawable/my_tab_text_selector"
android:textSize="@dimen/font_size_buttom_bar"
android:text="分类"

>
</TextView>
</LinearLayout>
</LinearLayout>

<LinearLayout
android:id="@+id/anager"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/linear_manager"
android:layout_height="62dip"
android:layout_width="62dip"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<RelativeLayout 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/update_manager_num"
android:layout_width="20dip"
android:layout_height="20dip"
android:layout_marginLeft="20dip"
android:background="@drawable/update_number_bkg"
android:textSize="@dimen/font_size_buttom_bar"
android:text="1"
android:visibility="gone"
android:layout_marginBottom="20dip"
android:gravity="center"
android:textColor="@color/red"
>
</TextView>
</RelativeLayout>
<TextView
android:id="@+id/manager_name"
android:layout_height="fill_parent"
android:drawableTop="@drawable/ic_downloads"
android:layout_width="48dip"
android:paddingTop="3dip"
android:paddingBottom="3dip"
android:gravity="center"
android:textColor="@drawable/my_tab_text_selector"
android:layout_gravity="center_horizontal"
android:textSize="@dimen/font_size_buttom_bar"
android:text="管理"
>
</TextView>
</LinearLayout>
</LinearLayout>
<LinearLayout
android:id="@+id/ll"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/linear_search"
android:layout_height="62dip"
android:layout_width="62dip"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<TextView
android:id="@+id/search_name"
android:layout_height="fill_parent"
android:layout_width="48dip"
android:paddingTop="3dip"
android:paddingBottom="3dip"
android:gravity="center"
android:layout_gravity="center_horizontal"
android:drawableTop="@drawable/ic_search"
android:textColor="@drawable/my_tab_text_selector"
android:textSize="@dimen/font_size_buttom_bar"
android:text="搜索"

>
</TextView>
</LinearLayout>
</LinearLayout>
</LinearLayout>