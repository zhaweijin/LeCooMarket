<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget28"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@color/grobal_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/widget47"
        android:layout_width="fill_parent"
        android:background="@drawable/list_selector"
        android:layout_height="60dip" >

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/lc_b"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/software_image"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_margin="1.5dip" >
            </ImageView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_toLeftOf="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_toRightOf="@+id/layout_image"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/software_name"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="4dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:text="aaaaaaa"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_l" >
            </TextView>

           
           <RelativeLayout
            android:id="@+id/layout_progress"
            android:layout_width="150dip"
            android:layout_weight="1"
            android:layout_marginBottom="5dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dip"         
            android:layout_height="wrap_content" >

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="12dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:progressDrawable="@drawable/download_progress_color" />

            <TextView
                android:id="@+id/progress_bar_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="10sp" />
        </RelativeLayout>
           
   </RelativeLayout>

        
        
        
        


    <TextView
            android:id="@+id/download"
            android:layout_width="48dip"
            android:layout_height="fill_parent"           
            android:text="暂停"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableTop="@drawable/btn_stop_continute"
            android:textColor="@color/text_gray"
            android:paddingTop="5dip"
            android:gravity="center"
            android:layout_marginBottom="5dip"
            android:textSize="@dimen/font_size_s" >
    >
    </TextView>

      <ImageView
            android:id="@+id/verticalline"
            android:layout_width="wrap_content"
            android:background="@drawable/vertical_line"
            android:layout_toLeftOf="@+id/download"
            android:layout_centerVertical="true"
            android:layout_height="45dip" >
       </ImageView>
        


    <Button
            android:id="@+id/download_cancel"
            android:layout_width="48dip"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/verticalline"
            android:layout_height="fill_parent"         
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_manager_cancel"
            android:focusable="false"
            android:text="取消"
            android:gravity="center"
            android:paddingTop="5dip"
            android:layout_marginBottom="5dip"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_s" >
    >
    </Button>

        
</RelativeLayout>

</RelativeLayout>