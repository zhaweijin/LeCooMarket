<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget28"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@color/grobal_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/widget47"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@drawable/list_selector" >

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="6dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/lc_b" >

            <ImageView
                android:id="@+id/software_image"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_margin="1.5dip"
                >
            </ImageView>
        </LinearLayout>

       <TextView
                android:id="@+id/software_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="3dip"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/layout_image"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_l" >

      </TextView>

      <RatingBar
                android:id="@+id/rating"
                style="@style/IWRatingBar"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/layout_image"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="6dip"
                android:layout_marginLeft="4dip"
                android:layout_width="wrap_content"
                android:layout_height="12dip"    
                android:rating="0.0" >
      </RatingBar>
          
      
        
        <TextView
                android:id="@+id/software_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="500KB"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="5dip"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/verticalline"
                android:textSize="@dimen/font_size_s" >
            </TextView>
        
        
        <ImageView
            android:id="@+id/verticalline"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/vertical_line"
            android:layout_toLeftOf="@+id/download"
            android:layout_height="45dip" >
        </ImageView>
        
        <TextView
            android:id="@+id/download"
            android:layout_width="48dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="7dip"
            android:drawableTop="@drawable/btn_downloading"
            android:gravity="center"
            android:paddingTop="5.0dip"
            android:text="免费"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_s" />
        
    </RelativeLayout>

</RelativeLayout>