<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget31"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grobal_background" >
    
    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/widget28"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_progress"
        android:background="@color/grobal_background" >

        <LinearLayout
            android:id="@+id/widget28"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/grobal_background"
            android:orientation="vertical" >


            <LinearLayout
                android:id="@+id/widget64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                

                <LinearLayout
                    android:id="@+id/widget66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="130dip"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:layout_marginTop="2dip"
                        android:textSize="@dimen/font_size_s"
                        android:textColor="@color/text_gray" >
                    </TextView>
                    
                    <TextView
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:singleLine="true"                     
                        android:textSize="@dimen/font_size_s"
                        android:textColor="@color/text_gray" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/widget70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/update"
                        android:layout_marginTop="2dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/font_size_s"
                        android:textColor="@color/text_gray" >
                    </TextView>

                    <TextView
                        android:id="@+id/download_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/font_size_s"
                        android:layout_marginBottom="3dip"
                        android:textColor="@color/text_gray" >
                    </TextView>

                </LinearLayout>
            </LinearLayout>

           <LinearLayout
                android:id="@+id/gallery_diver1"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/gallery_diver"
                android:orientation="vertical" >
            </LinearLayout> 
            
            <RelativeLayout
                android:id="@+id/software_introduce"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_marginTop="3dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/widget75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="软件描述"
                    android:textColor="@color/text_gray"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_size_buttom_bar" >
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_webview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="3dip"
                android:orientation="vertical" >
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/layout_introducde_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/introduce_button"
                android:layout_gravity="right"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/introduce_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_s" >
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/gallery_diver3"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/gallery_diver"
                android:orientation="vertical" >
            </LinearLayout> 


           <LinearLayout
               android:id="@+id/widget29"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="2dip"
               android:orientation="vertical"
             >
              <LinearLayout
                android:id="@+id/layout_gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_marginBottom="3dip"
                android:orientation="vertical"
                 >
              </LinearLayout>
              <LinearLayout
                android:id="@+id/layout_gallery_select_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                 >
              </LinearLayout>
            </LinearLayout>
           
            <LinearLayout
                android:id="@+id/gallery_diver2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:background="@drawable/gallery_diver"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_download"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/widget75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_gravity="center"
                    android:text="猜你会喜欢"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_size_buttom_bar" >
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_other_software_gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutextlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/other_gallery_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dip"
                    android:textSize="@dimen/font_size_s"
                    android:visibility="gone" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gallery_diver4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gallery_diver"
                android:orientation="vertical" >
            </LinearLayout>


            <TextView
                android:id="@+id/otame"
                android:layout_width="wrap_content"
                android:layout_height="80dip"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/font_size_s" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_download"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/buttom_top_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/information_download_background"
        android:orientation="vertical" >
    </LinearLayout>

 
    
</RelativeLayout>