<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
    
<LinearLayout
android:id="@+id/linear_m"
android:layout_height="wrap_content"
android:layout_width="60dip"
android:layout_marginTop="3dip"
android:layout_marginBottom="3dip"
android:layout_marginLeft="2dip"
android:layout_marginRight="2dip"
android:background="@drawable/tab_buttom_selected_rounded"
android:layout_gravity="center_horizontal"
android:orientation="vertical"
>
<RelativeLayout 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
>
<ImageView
android:id="@+id/tab_image"
android:layout_marginTop="2dip"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/ic_tab_downloads"
>
</ImageView>
<TextView
android:id="@+id/update_number"
android:layout_width="20dip"
android:layout_height="20dip"
android:layout_marginLeft="20dip"
android:background="@drawable/update_number_bkg"
android:textSize="15sp"
android:text="1"
android:visibility="gone"
android:layout_marginBottom="20dip"
android:gravity="center"
android:textColor="@color/red"
>
</TextView>
</RelativeLayout>  
<TextView
android:id="@+id/tabsText"
android:layout_height="wrap_content"
android:layout_width="wrap_content" 
android:textColor="@drawable/my_tab_text_selector"
android:layout_gravity="center_horizontal"
android:textSize="13sp"
>
</TextView>
</LinearLayout>
</LinearLayout>