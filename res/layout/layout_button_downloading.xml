<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget30"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/widget33"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">



        <TextView
                android:id="@+id/software_download_stop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="48dip"
                android:layout_marginTop="4dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textSize="@dimen/font_size_m"
                android:drawableLeft="@drawable/btn_stop_continute"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="" >
       </TextView>
  
        
        <RelativeLayout
            android:id="@+id/layout_progress"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="5dip"
            
            android:layout_height="wrap_content" >

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="12dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:progressDrawable="@drawable/download_progress_color" />

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="10sp" />
        </RelativeLayout>
     
 
            <TextView
                android:id="@+id/software_download"
                android:layout_width="wrap_content"
                android:layout_height="48dip"
                android:layout_marginTop="4dip"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:textSize="@dimen/font_size_m"
                android:drawableLeft="@drawable/ic_manager_cancel"              
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:text="取消" >
            </TextView>
        
     
    </LinearLayout>

</LinearLayout>